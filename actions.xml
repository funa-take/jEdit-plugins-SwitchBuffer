<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>
	<ACTION NAME="switchbuffer.display-dialog">
		<CODE>switchbuffer.SwitchBufferPlugin.switchBuffer(view);</CODE>
	</ACTION>
	
	<ACTION NAME="switchbuffer.display-dialog-order-by-normal">
		<CODE>switchbuffer.SwitchBufferPlugin.switchBuffer(view,false);</CODE>
	</ACTION>
	
	<ACTION NAME="switchbuffer.display-dialog-order-by-recent">
		<CODE>switchbuffer.SwitchBufferPlugin.switchBuffer(view,true);</CODE>
	</ACTION>
	
	<ACTION NAME="switchbuffer.display-dialog-for-directory">
		<CODE>switchbuffer.SwitchBufferPlugin.switchBufferForDirectory(view);</CODE>
	</ACTION>
	
	<ACTION NAME="switchbuffer.file-suffix-switch">
		<CODE>switchbuffer.SwitchBufferPlugin.fileSuffixSwitch(buffer, view);</CODE>
	</ACTION>
</ACTIONS>
